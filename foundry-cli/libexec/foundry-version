#!/usr/bin/env bash

set -euo pipefail

source "$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)/foundry-common"

VERSION="0.1.0"
CONTRACT_VERSION="v1"

if [ "$(foundry_output_format)" = "human" ]; then
  printf 'foundry %s\n' "$VERSION"
  printf 'contract %s\n' "$CONTRACT_VERSION"
  exit 0
fi

foundry_emit_json "{\"name\":\"foundry\",\"version\":\"${VERSION}\",\"contract\":\"${CONTRACT_VERSION}\"}"
